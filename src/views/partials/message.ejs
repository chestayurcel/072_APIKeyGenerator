<% if (typeof message !== 'undefined' && message) { %>
    <div class="mb-4 p-4 rounded-md bg-green-100 text-green-700">
        <%= message %>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="mb-4 p-4 rounded-md bg-red-100 text-red-700">
        <%= error %>
    </div>
<% } %>