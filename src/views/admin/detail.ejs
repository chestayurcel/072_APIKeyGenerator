<%- include('../partials/header', { title: title }) %>

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Detail User</h1>
    <a href="/admin/dashboard" class="text-sm text-indigo-600 hover:text-indigo-800">‚Üê Kembali ke Dashboard</a>
</div>

<!-- Data User -->
<div class="bg-white rounded-lg shadow-xl p-8 mb-6">
    <h2 class="text-2xl font-semibold mb-4"><%= user.firstname %> <%= user.lastname %></h2>
    <p class="text-gray-600"><%= user.email %></p>
</div>

<!-- Daftar API Key -->
<div class="bg-white rounded-lg shadow-xl p-8">
    <h2 class="text-2xl font-semibold mb-4">API Keys</h2>
    <div class="space-y-4">
        <% userDetails.forEach(key => { %>
            <div class="border rounded-lg p-4">
                <div class="flex flex-wrap justify-between items-center gap-4">
                    <code class="text-sm bg-gray-100 p-2 rounded break-all"><%= key.key %></code>
                    <span class="px-3 py-1 text-sm font-semibold rounded-full <%= key.status === 'Valid' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= key.status %>
                    </span>
                </div>
                <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                    <div>
                        <span class="font-medium">Start Date:</span>
                        <%= new Date(key.start_date).toLocaleDateString('id-ID', { dateStyle: 'long' }) %>
                    </div>
                    <div>
                        <span class="font-medium">End Date:</span>
                        <%= new Date(key.end_date).toLocaleDateString('id-ID', { dateStyle: 'long' }) %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>