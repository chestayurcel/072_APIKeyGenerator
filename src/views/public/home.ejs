<%- include('../partials/header', { title: title }) %>

<div class="max-w-2xl mx-auto mt-10">
    
    <div class="bg-white rounded-xl shadow-lg overflow-hidden border-t-4 border-indigo-500">
        
        <div class="px-8 py-6 border-b border-gray-100 bg-gray-50">
            <h1 class="text-3xl font-bold text-gray-800">Dapatkan API Key Anda</h1>
            <p class="text-gray-500 mt-1">Isi form di bawah untuk mulai menggunakan layanan kami.</p>
        </div>

        <!-- Body Kartu -->
        <div class="p-8">
            
            <!-- Logic Pesan Error/Sukses -->
            <% 
              let errorMessage = null;
              let successMessage = typeof message !== 'undefined' ? message : null;

              if (successMessage && successMessage.startsWith('Error:')) {
                  errorMessage = successMessage.substring(7);
                  successMessage = null;
              }
            %>

            <%- include('../partials/message', { 
                message: successMessage, 
                error: errorMessage
            }) %>

            <form id="userForm" action="/save" method="POST">
                <div class="space-y-6">
                    
                    <!-- Grid untuk Nama Depan & Belakang -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="firstname" class="block text-sm font-bold text-gray-700 uppercase tracking-wide mb-2">First Name</label>
                            <input type="text" id="firstname" name="firstname" required placeholder="John"
                                    class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3 border transition-colors duration-200">
                        </div>
                        <div>
                            <label for="lastname" class="block text-sm font-bold text-gray-700 uppercase tracking-wide mb-2">Last Name</label>
                            <input type="text" id="lastname" name="lastname" required placeholder="Doe"
                                    class="block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3 border transition-colors duration-200">
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-bold text-gray-700 uppercase tracking-wide mb-2">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                </svg>
                            </div>
                            <input type="email" id="email" name="email" required placeholder="john@example.com"
                                    class="block w-full pl-10 rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg p-3 border transition-colors duration-200">
                        </div>
                    </div>
                    
                    <hr class="border-gray-100 my-6">

                    <!-- Bagian API Key (Highlight) -->
                    <div class="bg-indigo-50 rounded-xl p-6 border border-indigo-100">
                        <label for="api_key" class="block text-sm font-bold text-indigo-800 uppercase tracking-wide mb-2">API Key Anda</label>
                        <div class="flex flex-col md:flex-row gap-3">
                            <div class="relative flex-grow">
                                <input type="text" id="api_key" name="api_key" readonly required placeholder="Klik tombol Generate..."
                                       class="block w-full rounded-lg border-gray-300 shadow-sm bg-white text-lg p-3 border font-mono text-gray-600 focus:ring-0">
                            </div>
                            <button type="button" id="generateBtn"
                                    class="inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                                Generate
                            </button>
                        </div>
                        <p class="text-xs text-indigo-600 mt-2">* Klik tombol Generate untuk membuat kunci unik Anda.</p>
                    </div>

                    <!-- Tombol Simpan -->
                    <button type="submit" id="saveBtn" disabled
                            class="w-full flex justify-center py-4 px-4 border border-transparent rounded-lg shadow-sm text-xl font-bold text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 disabled:bg-gray-300 disabled:cursor-not-allowed transition-all duration-200 mt-4">
                        Simpan Data
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Footer Kecil -->
    <div class="text-center mt-6 text-gray-400 text-sm">
        &copy; 2024 API Manager Service. All rights reserved.
    </div>
</div>

<script>
    document.getElementById('generateBtn').addEventListener('click', function() {
        // Animasi loading tombol sederhana
        const btn = this;
        const originalText = btn.innerHTML;
        btn.innerHTML = 'Generating...';
        btn.disabled = true;

        setTimeout(() => {
            var randomKey = Array.from(window.crypto.getRandomValues(new Uint8Array(16)))
                .map(b => b.toString(16).padStart(2, '0'))
                .join('');
            
            const inputKey = document.getElementById('api_key');
            inputKey.value = randomKey;
            
            // Efek visual highlight
            inputKey.classList.add('ring-2', 'ring-indigo-500');
            setTimeout(() => inputKey.classList.remove('ring-2', 'ring-indigo-500'), 500);

            document.getElementById('saveBtn').disabled = false;
            
            // Kembalikan tombol
            btn.innerHTML = originalText;
            btn.disabled = false;
        }, 300);
    });
</script>

<%- include('../partials/footer') %>